    <!-- The Surprise Modal/Overlay - Initially hidden -->
    <div id="surprise-modal" class="fixed inset-0 bg-opacity-80 flex items-center justify-center p-4 z-50 transition-opacity duration-1000 opacity-0 invisible" role="dialog" aria-modal="true" aria-labelledby="modal-title">

        <!-- Modal Wrapper for Message and Photo cards -->
        <div class="relative w-full max-w-md">

            <!-- Message Card (Part 1) -->
